{
  "name": "some template",
  "type": "invoice",
  "baseFile": "invoice.hbs",
  "defaults": {
    "render": {
      "png": {
        "viewportSize": {
          "width": 1920,
          "height": 1080
        },
        "html": {
          "embedImages": true,
          "embedCSS": true
        },
        "csv": {
          "embedColumnHeaders": true
        }
      }
    },
    "intl": {
      "formats": {
        "date": {
          "medium": {
            "month": "short",
            "day": "numeric",
            "year": "2-digit"
          },
          "long": {
            "month": "long",
            "day": "numeric",
            "year": "numeric"
          }
        }
      },
      "messages": {
        "FOOBAR": "Template Defaults FooBar"
      }
    }
  },
  "locales": {
    "en-US": {
      "render": {
        "pdf": {
          "paperSize": {
            "format": "Letter",
            "orientation": "portrait",
            "margin": {
              "left": "1cm",
              "right": "1cm",
              "top": "1cm",
              "bottom": "1cm"
            }
          }
        }
      },
      "intl": {
        "formats": {
          "date": {
            "medium": {
              "month": "short",
              "day": "numeric",
              "year": "2-digit"
            },
            "long": {
              "month": "long",
              "day": "numeric",
              "year": "numeric"
            }
          }
        },
        "messages": {
          "FOOBAR": "Template en-US FooBar"
        }
      }
    },
    "en-GB": {
      "render": {
        "pdf": {
          "paperSize": {
            "format": "A4",
            "orientation": "landscape",
            "margin": {
              "left": "2cm",
              "right": "2cm",
              "top": "2cm",
              "bottom": "2cm"
            }
          }
        }
      },
      "intl": {
        "formats": {
          "date": {
            "medium": {
              "month": "short",
              "day": "numeric",
              "year": "2-digit"
            },
            "long": {
              "month": "long",
              "day": "numeric",
              "year": "numeric"
            }
          }
        },
        "messages": {
          "FOOBAR": "Template en-GB FooBar"
        }
      }
    }
  }
}